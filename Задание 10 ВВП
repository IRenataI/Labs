#include <iostream>

using namespace std;

int main()
{
	setlocale(LC_ALL, "RUS");

	//Задание 1

	int A, B;

	cout << "Введите число A" << endl;
	cin >> A;
	cout << "Введите число B" << endl;
	cin >> B;

	if (A > 2 && B <= 3)
	{
		cout << "Неравенства A > 2 и B <= 3 справедливы" << endl;
	}
	else
	{
		cout << "Неравенства A > 2 и B <= 3 несправедливы" << endl;
	}

	//Задание 2
	
	cout << "=================================================" << endl;

	int C;

	cout << "Введите число A" << endl;
	cin >> A;
	cout << "Введите число B" << endl;
	cin >> B;
	cout << "Введите число C" << endl;
	cin >> C;

	if (A < B && B < C)
	{
		cout << "Двойное неравенство A < B < C справедливо" << endl;
	}
	else
	{
		cout << "Двойное неравенство A < B < C несправедливо" << endl;
	}

	//Задание 3

	cout << "=================================================" << endl;

	cout << "Введите число:" << endl;
	cin >> A;

	if (A % 2 == 0 && A >= 10 && A < 100)
	{
		cout << "Данное число является четным двузначным : истина" << endl;
	}
	else
	{
		cout << "Данное число является четным двузначным : ложь" << endl;
	}

	//Задание 4

	cout << "=================================================" << endl;

	cout << "Введите трёхзначное число:" << endl;
	cin >> A;
	int p, v, t;

	t = A % 10;
	v = (A % 100) / 10;
	p = A / 100;

	if (p > v && v > t)
	{
		cout << "Цифры данного числа образуют убывающую последовательность" << endl;
	}
	else if (p < v && v < t)
	{
		cout << "Цифры данного числа образуют возрастающую последовательность" << endl;
	}
	else
	{
		cout << "Цифры данного числа не образуют возрастающую или убывающую последовательностьь" << endl;
	}

	//Задание 5

	cout << "=================================================" << endl;

	cout << "Введите четырёхзначное число:" << endl;
	cin >> A;

	if (A % 10 == A / 1000 & A % 100 / 10 == A % 1000 / 100)
	{
		cout << "Данное число читается одинаково слева направо и справа налево" << endl;
	}
	else
	{
		cout << "Данное число не читается одинаково слева направо и справа налево" << endl;
	}

	//Задание 6

	cout << "=================================================" << endl;

	int a, b, c;

	cout << "Введите первую сторону треугольника" << endl;
	cin >> a;
	cout << "Введите вторую сторону треугольника" << endl;
	cin >> b;
	cout << "Введите третью сторону треугольника" << endl;
	cin >> c;


	if ((a * a == b * b + c * c) || (b * b == a * a + c * c) || (c * c == a * a + b * b))
	{
		cout << "Треугольник со сторонами a, b, c является прямоугольным" << endl;
	}
	else
	{
		cout << "Треугольник со сторонами a, b, c не является прямоугольным" << endl;
	}

	//Задание 7

	cout << "=================================================" << endl;


	cout << "Введите первую сторону треугольника" << endl;
	cin >> a;
	cout << "Введите вторую сторону треугольника" << endl;
	cin >> b;
	cout << "Введите третью сторону треугольника" << endl;
	cin >> c;

	if ((a + b) > c && (a + c) > b && (b + c) > a)
	{
		cout << "Существует треугольник со сторонами a, b, c" << endl;
	}
	else
	{
		cout << "Треугольник со сторонами не существует a, b, c" << endl;
	}

}
