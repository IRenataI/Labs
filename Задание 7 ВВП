
#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    setlocale(LC_ALL, "RUS");


    //Задание 1

    float a;
    const double pi = 3.14;

    cout << "Введите значение угла a в градусах" << endl;
    cin >> a;

    while ((a < 0) || (a > 360))
    {
        cout << "Введены некорректные данные!" << endl;
        cin >> a;
    }

    cout << a << " градусов = " << (a / 180) * pi << " радианов" << endl;

    //Задание 2

    cout << "==========================================================" << endl;

    cout << "Введите значение угла a в радианах " << endl;
    cin >> a;

    while ((a < 0) || (a > pi*2))
    {
        cout << "Введены некорректные данные!" << endl;
        cin >> a;
    }

    cout << a << " радианов = " << (a * 180) / pi << " градусов" << endl;

    //Задание 3

    cout << "==========================================================" << endl;

    float A, X, Y, kg;

    cout << "Укажите вес конфет (кг)" << endl;
    cin >> X;
    cout << "Укажите цену конфет за " << X << " кг (руб)" << endl;
    cin >> A;
    cout << "Укажите нужный вес (кг)" << endl;
    cin >> Y;

    kg = A / X;

    cout << "Цена за 1 кг = " << kg << " руб" << endl;
    cout << "Цена за " << Y << " кг = " << Y * kg << " руб" << endl;

    //Задание 4

    cout << "==========================================================" << endl;

    float V1, V2, S, T;

    cout << "Введите скорость первого автомобиля (км/ч)" << endl;
    cin >> V1;

    cout << "Введите скорость второго автомобиля (км/ч)" << endl;
    cin >> V2;

    cout << "Введите расстояние между 2-мя автомобилями (км)" << endl;
    cin >> S;

    cout << "Введите знчение времени (ч)" << endl;
    cin >> T;

    cout << "Расстояние между 2-мя автомобилями через " << T << "ч = " << (V1 + V2) * 4 + S << "км" << endl;

    //Задание 5

    cout << "==========================================================" << endl;
    

    float B;

    cout << "A*x+B=0" << endl;

    cout << "Введите коэффициент A" << endl;
    cin >> A;

    while (A == 0)
    {
        cout << "Коэффициент A должен быть ненулевым!" << endl;
        cin >> A;
    }

    cout << "Введите коэффициент B" << endl;
    cin >> B;
    
    cout << "x = " << (-B / A) << endl;

    //Задание 5

    cout << "==========================================================" << endl;

    float A1, A2, B1, B2, C1, C2, y, x;

    cout << "Система" << endl;
    cout << "A1*x+B1*y=C1" << endl;
    cout << "A2*x+B2*y=C2" << endl;

    cout << "Введите коэффициент A1" << endl;
    cin >> A1;
    cout << "Введите коэффициент B1" << endl;
    cin >> B1;
    cout << "Введите коэффициент C1" << endl;
    cin >> C1;
    cout << "Введите коэффициент A2" << endl;
    cin >> A2;
    cout << "Введите коэффициент B2" << endl;
    cin >> B2;
    cout << "Введите коэффициент C2" << endl;
    cin >> C2;

    float step1,step2,step3;

    step1 = A1 * B2 - B1 * A2;
    step2 = C1 * B2 - B1 * C2;
    step3 = A1 * C2 - C1 * A2;

    x = step2 / step1;
    y = step3 / step1;

    cout << "x = " << x << endl;
    cout << "y = " << y << endl;

    return 0;

}
