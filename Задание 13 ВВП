#include <iostream>

using namespace std;

int main()
{
	setlocale(LC_ALL, "RUS");

	//Задание 1

	float a;
	cout << "Введите цену за килограмм:" << endl;
	cin >> a;

	for (float i = 0.1; i < 1.1; i += 0.1) 
	{
		cout << "Цена за " << i << " кг конфет = " << a * i << " (руб)" << endl;
	}

	//Задание 2

	cout << "=================================================" << endl;

	float N, i = 0.1, r = 1;
	cout << "Введите целое число N (N>0)" << endl;
	cin >> N;

	while (i <= N)
	{
		r = r * i;
		i = i + 0.1;
	}
	
	cout << "Произведение N сомножителей = " << r << endl;

	cout << "=================================================" << endl;

	//Задание 3

	cout << "=================================================" << endl;

	cout << "Введите целое число N (N>0)" << endl;
	cin >> N;

	r = 0;

	cout << "Нахождение квадрата числа по этапам..." << endl;

	for (int i = 1; i <= (2 * N - 1); i += 2)
	{
		r += i;
		cout << r << endl;
	}

	//Задание 4

	cout << "=================================================" << endl;

	int A;

	cout << "Введите вещественное число A" << endl;
	cin >> A;
	cout << "Введите целое число N (N>0)" << endl;
	cin >> N;

	float A2 = 1;
	r = 1;

	for (int i = 2; i <= N; ++i)
	{
		A2 = A2 * A;
		r = r + A2;
	}
	cout << "Сумма 1 + A + A^2 + A^3 + . . . + A^N = " << r << endl;

	//Задание 5

	cout << "=================================================" << endl;

	cout << "Введите вещественное число A" << endl;
	cin >> A;
	cout << "Введите целое число N (N>0)" << endl;
	cin >> N;

	r = 1;
	A2 = 1;

	for (int i = 2; i <= N; ++i)
	{
		A2 = A2 * -A;
		r = r + A2;
	}
	cout << "1 - A + A^2 - A^3 + . . . +- A^N = " << r << endl;

}
