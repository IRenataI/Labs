#include <iostream>

using namespace std;

int main()
{
	setlocale(LC_ALL, "RUS");

	//Задание 1

	int N;

	cout << "Сколько секунд прошло с начала суток?" << endl;
	cin >> N;

	cout << "С начал последней минуты прошло " << N % 60 << " секунд" << endl;

	//Задание 2
	
	cout << "=================================================" << endl;

	int K;

	cout << "0 — воскресенье, 1 — понедельник, 2 — вторник, …, 6 — суббота." << endl;

	cout << "Введите день года" << endl;

	cin >> K;

	cout << "Номер дня недели = "<< K % 7 << endl;

	//Задание 3

	cout << "=================================================" << endl;

	cout << "1 — понедельник, 2 — вторник, . . . , 6 — суббота, 7 — воскресенье." << endl;

	int number;
	cout << "Введите день в году (от 1 до 365)" << endl;
	cin >> K;
	cout << "Каким номером дня недели было 1 января?" << endl;
	cin >> N;
	number = ((K + N - 2) % 7) + 1;
	cout << "Номер дня недели = " << number << endl;

	//Задание 4

	cout << "=================================================" << endl;

	int A, B, C;
	cout << "Введите первую сторону треугольника (A > 0)" << endl;
	cin >> A;
	cout << "Введите вторую сторону прямоугольника (B > 0)" << endl;
	cin >> B;
	cout << "Введите cторону квадрата (C > 0)" << endl;
	cin >> C;

	cout << "Максимальное возможное количество квадратов в прямоугольнике = " << (A * B) / (C * C) << endl;
	cout << "Площадь незанятой части прямоугольника = " << (A * B) - (C * C * ((A * B) / (C * C))) << endl;

	//Задание 5

	cout << "=================================================" << endl;

	int god;
	cout << "Введите номер некоторого года (целое положительное число)" << endl;
	cin >> god;
	cout << god << " год - " << (god / 100) + 1 << " столетие" << endl;
}
