#include <iostream>
using namespace std;
int main() {
    int n;
    char c;
    cout << "Enter the initial direction (W - west, N - north, S - south, E - east)" << endl;
    cin >> c;
    cout << "Enter the command (0 - continue driving, 1 - turn left, -1 - turn right)" << endl;
    cin >> n;
    switch (c) {
    case 'N':
        switch (n) {
        case 1:
            c = 'W';
            break;
        case 0:
            c = 'N';
            break;
        case -1:
            c = 'E';
            break;
        }
        break;
    case 'Ð’':
        switch (n) {
        case 1:
            c = 'N';
            break;
        case 0:
            c = 'E';
            break;
        case -1:
            c = 'S';
            break;
        }
    case 'S':
        switch (n) {
        case 1:
            c = 'E';
            break;
        case 0:
            c = 'S';
            break;
        case -1:
            c = 'W';
            break;
        }
        break;
    case 'W':
        switch (n) {
        case 1:
            c = 'S';
            break;
        case 0:
            c = 'W';
            break;
        case -1:
            c = 'N';
            break;
        }
    }
    cout << "Direction: " << c << endl;

}
