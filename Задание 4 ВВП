

#include <iostream>

using namespace std;

int main()
{
    //Задание 1
    float a, b, P, S;

    setlocale (LC_ALL, "RUS");
    cout << "Введите длину прямоугольника" << endl;
    cin >> a;
    while (a<0)
    {
        cout << "Число должно быть положитльным!" << endl;
        cin >> a;
    }
    cout << "Введите ширину прямоугольника" << endl;
    cin >> b;
    while (b < 0)
    {
        cout << "Число должно быть положительным!" << endl;
        cin >> b;
    }
    S = a * b;
    P = 2 * (a + b);
    cout << "Площадь прямоугольника = " << S << endl;
    cout << "Периметр прямоугольника = " << P << endl;

    //Задание 2


    cout << "===========================================================" << endl;

    float d, pi, L;
    pi = 3.14;

    cout << "Введите диаметр окружности" << endl;
    cin >> d;
    while (d < 0)
    {
        cout << "Число должно быть положительным!" << endl;
        cin >> d;
    }
    L = pi * d;
    cout << "Длина окружности = " << L << endl;

    //Задание 3
    cout << "===========================================================" << endl;
    cout << "Введите первое число" << endl;
    cin >> a;
    cout << "Введите второе число" << endl;
    cin >> b;

    cout << "Среднее арифметическое чисел = " << ((a + b) / 2)<<endl;

    //Задание 4
    cout << "===========================================================" << endl;
    cout << "Введите первое число" << endl;
    cin >> a;
    while (a == 0)
    {
        cout << "Число должно быть ненулевым!" << endl;
        cin >> a;
    }
    cout << "Введите второе число" << endl;
    cin >> b;
    while (b==0)
    {
        cout << "Число должно быть ненулевым!" << endl;
        cin >> b;
    }
    cout << "Сумма квадратов числел = " << (a * a) + (b * b) << endl;
    cout << "Разность квадратов числел = " << (a * a) - (b * b) << endl;
    cout << "Произведение квадратов числел = " << (a * a) * (b * b) << endl;
    cout << "Частное квадратов числел = " << (a * a) / (b * b) << endl;

    //Задание 5
    cout << "===========================================================" << endl;
    cout << "Введите первое число" << endl;
    cin >> a;
    while (a == 0)
    {
        cout << "Число должно быть ненулевым!" << endl;
        cin >> a;
    }
    cout << "Введите второе число" << endl;
    cin >> b;
    while (b == 0)
    {
        cout << "Число должно быть ненулевым!" << endl;
        cin >> b;
    }

    cout << "Сумма модулей чисел = " << abs(a)+abs(b) << endl;
    cout << "Разность модулей чисел = " << abs(a) - abs(b) << endl;
    cout << "произведение модулей чисел = " << abs(a) * abs(b) << endl;
    cout << "Частное модулей чисел = " << abs(a) / abs(b) << endl;
}


