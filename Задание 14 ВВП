#include <iostream>
#include <iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");

	//Задание 1

	int A, B;

	cout << "Введите целое положительное число A" << endl;
	cin >> A;
	cout << "Введите целое положительное число B (B>A)" << endl;
	cin >> B;

	for (int i = B - 1; i > A; --i)
	{
		for (int j = 0; j < i; j++)
		{
			cout << i << " ";
		}
		cout << "\n";
	}

	//Задание 2

	cout << "=================================================" << endl;

	cout << "Введите длину отрезка A" << endl;
	cin >> A;
	cout << "Введите длину отрезка B (B<A)" << endl;
	cin >> B;

	while (A - B >= 0)
	{
		A = A - B;
	}

	cout << "Длина незанятой части отрезка A = " << A << endl;


	//Задание 3

	cout << "=================================================" << endl;

	int N;

	cout << "Введите целое число N (N>1)" << endl;
	cin >> N;

	int K = 0;
	int sum = 0;

	while (sum <= N) 
	{
		K++;
		sum = sum + K;
	}

	cout << "Наименьшее из целых чисел K, для которых сумма 1 + 2 + . . . + K больше или равна N = " << K << endl;
	cout << "Сумма = " << sum << endl;

	//Задание 4

	cout << "=================================================" << endl;

	float P;
	K = 0;
	float S = 1000;

	cout << "Введите процент (P - вещественное число, 0 < P < 25)" << endl;
	cin >> P;

	while (S <= 1100)
	{
		K++;
		S += S * P / 100;
	}
	cout << "Количество месяцев = " << K << endl;
	cout << "Итоговый размер вклада = " << S << endl;

	//Задание 5

	cout << "=================================================" << endl;

	cout << "Введите целое положительное число A" << endl;
	cin >> A;
	cout << "Введите целое положительное число B" << endl;
	cin >> B;

	while (A != 0 && B != 0)
	{
		if (A > B)
		{
			A = A % B;
		}
		else
		{
			B = B % A;
		}
	}

	cout << "НОД = " << (A + B) << endl;

	//Задание 6

	cout << "=================================================" << endl;

	cout << "Введите целое число N (N>1)" << endl;
	cin >> N;

	int f1 = 1, f2 = 1, f = 0;
	K = 2;

	while (f < N) 
	{
		K++;
		f = f2 + f1;
		f2 = f1;
		f1 = f;
	}

	cout << "Порядковый номер числа Фибоначчи N = " << K << endl;

}
